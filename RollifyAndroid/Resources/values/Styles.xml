<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="CalcTextButton">
		<item name="android:background">@drawable/calc_toolbar_button</item>
 		
		<item name="android:textSize">@dimen/calculatorTextSize</item>
    </style>
    <style name="BigTextButton">
		<!--<item name="android:background">@drawable/operator_button</item>-->
 		<item name="android:background">@color/calculatorButton</item>
		<item name="android:textSize">@dimen/calculatorOperatorTextSize</item>
    </style>
    <style name="BigTextButton.Vertical">
    	<item name="android:layout_height">0px</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_weight">1</item>
    </style>
    <style name="BigTextButton.VerticalDouble">
    	<item name="android:layout_height">0px</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_weight">2</item>
    </style>
    <style name="CalcTextButton.Horizontal">
    	<item name="android:layout_width">0px</item>
    	<item name="android:layout_height">match_parent</item>
    	<item name="android:layout_weight">1</item>
    </style>
</resources>